{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
    <h1>Ajouter un livre</h1>

    {{ form_start(form) }}

    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.author.firstname) }}
        </div>
        <div class="col">
            {{ form_row(form.author.lastname) }}
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        bsCustomFileInput.init()
    </script>
{% endblock %}